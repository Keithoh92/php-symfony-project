{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>

            <tr>
    <th>Auctions for this category</th>
    <td>
        {%  for auction in category.auctions %}
            {{ auction.id }} :: {{ auction.item }}
    <br>
    {% else %}
    (no auctions currently in this category)
    {% endfor %}
    </td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('category_index') }}">back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
